{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "jsx": "preserve",
    "lib": ["DOM", "ES2015", "ES2018"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": "./src",

    // Temporary, until migration to TS is completed
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*", "./gatsby/**/*"]
}
